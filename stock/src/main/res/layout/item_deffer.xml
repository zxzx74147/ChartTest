<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.zxzx74147.stock.data.Deffer" />
        <import type="com.zxzx74147.devlib.utils.TimeUtil"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap_114">


        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/default_size_30"
            android:text="@{data.deferredDate}"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/default_size_30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@{data.deferredMoney}"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>