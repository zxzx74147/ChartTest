<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:padding="@dimen/default_gap_44">

        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现手续费规则"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_60"
                android:layout_height="wrap_content"
                android:text="	• 	2000元以内的提现金额收取1%的手续费"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_20"
                android:layout_height="wrap_content"
                android:text="	• 	提现不足200元收取2元手续费"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_20"
                android:layout_height="wrap_content"
                android:text="	• 	提现手续费20元封顶"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账时间"
                android:textColor="@color/text_black"
                android:layout_marginTop="@dimen/default_gap_80"
                android:textSize="@dimen/default_size_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_60"
                android:layout_height="wrap_content"
                android:text="	• 	提现在提交申请后1个交易日内到账。"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_20"
                android:layout_height="wrap_content"
                android:text="	• 	一天限额最多出金10000元"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />
        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</layout>