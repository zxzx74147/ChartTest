<resources>
    <style name="MyDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground"> @color/tran</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="label_grey">
        <item name="android:textSize">@dimen/default_size_26</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>

    <style name="content_black">
        <item name="android:textSize">@dimen/default_size_30</item>
        <item name="android:textColor">@color/text_black</item>
    </style>


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <!--<item name="colorBackground">@color/progress_bg</item>-->
        <!--<item name="android:background">@color/progress_bg</item>-->
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="TitleTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">@dimen/default_gap_4</item>
        <item name="tabPaddingStart">@dimen/default_gap_32</item>
        <item name="tabPaddingEnd">@dimen/default_gap_32</item>
        <item name="tabBackground">@color/tran</item>
        <item name="tabSelectedTextColor">@color/text_black</item>
        <item name="tabTextAppearance">@style/TitleTabTextLayout</item>
    </style>

    <style name="TitleTabTextLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/default_size_30</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>