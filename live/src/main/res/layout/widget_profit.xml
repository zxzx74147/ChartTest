<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.zxzx74147.live.data.Msg" />

        <import type="android.view.View" />

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/root_view"
        android:background="@drawable/home_egg"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_gap_20"
            android:layout_marginLeft="@dimen/default_gap_120"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_gap_15"
                android:text="@{@string/format_profit(data.nickName)}"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_12"
                android:layout_height="wrap_content"
                android:text="@{data.profitNum}"
                android:textColor="@color/red"
                android:textSize="@dimen/default_size_26" />

        </LinearLayout>
    </FrameLayout>
</layout>