<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:padding="@dimen/default_gap_44">

        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="代金券使用规则"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_60"
                android:layout_height="wrap_content"
                android:text="	• 	代金券可以代替资金进行交易，代金券与现金不可同时使用；"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_50"
                android:layout_height="wrap_content"
                android:text="	• 	代金券仅限购买对应面额的产品，如200元代金券只可购买200元/手的产品；"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_50"
                android:layout_height="wrap_content"
                android:text="	• 	代金券交易的订单无法持仓过夜，在当天休市系统是系统自动平仓；"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_50"
                android:layout_height="wrap_content"
                android:text="	• 	代金券交易的订单，平仓盈利金额可提现，代金券本金不计入盈利部分；"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_gap_50"
                android:layout_height="wrap_content"
                android:text="	• 	代金券使用一次即失效，仅限领取时的账号使用，不可买卖、转赠他人。"
                android:textColor="@color/text_black"
                android:textSize="@dimen/default_size_30" />

        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</layout>